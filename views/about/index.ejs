        <div class="col-lg-6">
          <div class="full-width">
            <form id="contact-form" method="post" action="{{ url_for('contact') }} novalidate="true">

              <!-- <div class="messages"></div> -->

              <div class="controls row">

                <div class="col-lg-6">
                  <div class="form-group mb-3">
                    <label>Your Name</label>
                    <input id="form_name" type="text" name="name" required="required">
                  </div>
                </div>

                <div class="col-lg-6">
                  <div class="form-group mb-3">
                    <label>Your Email</label>
                    <input id="form_email" type="email" name="email" required="required">
                  </div>
                </div>

                <div class="col-12">
                  <div class="form-group">
                    <label>Your Message</label>

                    <textarea class="textbox"> </textarea>
                  </div>
                  <div class="mt-2 mb-4 round-button text-center">
                    <button type="submit" class="disabled">
                      <span class="text">Send A Message</span>
                    </button>
                  </div>
                </div>

              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
