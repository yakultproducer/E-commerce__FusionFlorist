        <div class="row justify-content-center">
          <div class="col-lg-8 text-center" style="margin-top: 2rem;">

            <h3>Let's Get in Touch!</h3>
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
        <!-- left side -->
        <div class="col-lg-6 mb-3">
          <div class="info full-width md-mb80">
            <div class="item mb-3 d-flex align-items-center">
              <div class="me-2">
                <span style="font-size: 2rem; color: rgb(255, 255, 255);">
                  <i class="fa-solid fa-phone icon"></i>
                </span>

              </div>
              <div class="ms-3">
                <h6 class="opacity-7">Phone</h6>
              </div>
              <div class="ms-auto">
                <h4>+1 778 700 7048</h4>
              </div>
            </div>
            <div class="item mb-3 d-flex align-items-center">
              <div class="me-2">
                <span style="font-size: 2rem; color: rgb(255, 255, 255);">
                  <i class="fa-solid fa-envelope icon"></i>
                </span>

              </div>
              <div class="ms-3">
                <h6 class="opacity-7">Email</h6>
              </div>
              <div class="ms-auto">
                <h4>
                  <a href="mailto:abc@example.com">johnathanwong2001@gmail.com</a>
                </h4>
              </div>
            </div>
            <div class="item d-flex align-items-center">
              <div class="me-2">
                <span style="font-size: 2rem; color: rgb(255, 255, 255);">
                  <i class="fa-solid fa-location-dot icon"></i>
                </span>

              </div>
              <div class="ms-3">
                <h6 class="opacity-7">Address</h6>
              </div>
              <div class="ms-auto">
                <h4>Victoria, British Columbia, Canada</h4>
              </div>
            </div>
          </div>
        </div>
