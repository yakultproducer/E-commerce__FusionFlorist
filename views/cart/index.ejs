<h2>Your Cart</h2>
<% if (cartItems.length === 0) { %>
<p>Your cart is empty.</p>
<% } else { %>

<table class="cart-table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Product Name</th>
      <th>Price per Item</th>
      <th>Quantity</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% cartItems.forEach(cartItem => { %>
    <tr>
      <td class="cart-item-image">
        <img src="https://via.placeholder.com/100x120" alt="<%= cartItem.product.name %>">
      </td>
      <td><%= cartItem.product.name %></td>
      <td><%= cartItem.product.price %></td>
      <td class="cart-item-quantity" >
        <input type="number" min="1" value="<%= cartItem.quantity %>" data-product-id="<%= cartItem.product._id %>" class="quantity-input">
      </td>
      <td style="text-align: center;">
        <button class="remove-button" data-product-id="<%= cartItem.product._id %>">View</button>
        <button class="remove-button removeFromCartButton" data-product-id="<%= cartItem.product._id %>">Remove</button>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<% } %>